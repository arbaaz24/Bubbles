<Window x:Class="DragDropOverlay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DragDrop Overlay" SizeToContent="WidthAndHeight"
        WindowStyle="None" AllowsTransparency="True" Background="#01000000"
        Topmost="True" ResizeMode="NoResize" ShowInTaskbar="True"
        AllowDrop="True">
    <Grid x:Name="Root" Background="Transparent" MouseLeftButtonDown="Root_MouseLeftButtonDown">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" >
            <!-- Bubble 1 -->
            <StackPanel>
                <Border x:Name="Badge1" Width="120" Height="120" CornerRadius="60"
                        Background="#FF4C7DFF" Opacity="0.93"
                        MouseLeftButtonDown="Badge_MouseLeftButtonDown" MouseMove="Badge_MouseMove" MouseLeftButtonUp="Badge_MouseLeftButtonUp"
                        AllowDrop="True" Drop="Badge_Drop" DragOver="Badge_DragOver">
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="0" BlurRadius="20" Opacity="0.6"/>
                    </Border.Effect>
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="Bubble 1" FontSize="16" FontWeight="Bold" Foreground="White"/>
                        <TextBlock x:Name="CountText1" Text="0 items" FontSize="12" Foreground="#F0F0F0"/>
                        <Button Content="Clear" Click="Clear1_Click" Padding="6,2" Margin="4"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Bubble 2 -->
            <StackPanel>
                <Border x:Name="Badge2" Width="120" Height="120" CornerRadius="60"
                        Background="#FF6C9DFF" Opacity="0.93"
                        MouseLeftButtonDown="Badge_MouseLeftButtonDown" MouseMove="Badge_MouseMove" MouseLeftButtonUp="Badge_MouseLeftButtonUp"
                        AllowDrop="True" Drop="Badge_Drop" DragOver="Badge_DragOver">
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="0" BlurRadius="20" Opacity="0.6"/>
                    </Border.Effect>
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="Bubble 2" FontSize="16" FontWeight="Bold" Foreground="White"/>
                        <TextBlock x:Name="CountText2" Text="0 items" FontSize="12" Foreground="#F0F0F0"/>
                        <Button Content="Clear" Click="Clear2_Click" Padding="6,2" Margin="4"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Bubble 3 -->
            <StackPanel>
                <Border x:Name="Badge3" Width="120" Height="120" CornerRadius="60"
                        Background="#FF8CBDFF" Opacity="0.93"
                        MouseLeftButtonDown="Badge_MouseLeftButtonDown" MouseMove="Badge_MouseMove" MouseLeftButtonUp="Badge_MouseLeftButtonUp"
                        AllowDrop="True" Drop="Badge_Drop" DragOver="Badge_DragOver">
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="0" BlurRadius="20" Opacity="0.6"/>
                    </Border.Effect>
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="Bubble 3" FontSize="16" FontWeight="Bold" Foreground="White"/>
                        <TextBlock x:Name="CountText3" Text="0 items" FontSize="12" Foreground="#F0F0F0"/>
                        <Button Content="Clear" Click="Clear3_Click" Padding="6,2" Margin="4"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,8,0,8">
            <Button Content="Reload" Click="Reload_Click" Padding="10,4" Margin="4"/>
            <Button Content="Add Files" Click="AddFiles_Click" Padding="10,4" Margin="4"/>
            <Button Content="Exit" Click="Exit_Click" Padding="10,4" Margin="4"/>
        </StackPanel>
    </Grid>
</Window>