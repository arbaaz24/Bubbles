// =============================<?xml version="1.0" encoding="utf-8"?>-->
<Window x:Class="DragDropOverlay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DragDrop Overlay" SizeToContent="WidthAndHeight"
        WindowStyle="None" AllowsTransparency="True" Background="LightYellow"
        Topmost="True" ResizeMode="NoResize" ShowInTaskbar="True"
        AllowDrop="True" Drop="Window_Drop" DragOver="Window_DragOver">
    <Window.Resources>
        <Storyboard x:Key="PulseStoryboard" RepeatBehavior="Forever" AutoReverse="True">
            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)"
                             From="1.0" To="1.1" Duration="0:0:1.2"/>
            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)"
                             From="1.0" To="1.1" Duration="0:0:1.2"/>
        </Storyboard>

        <!-- Bubble style matching original appearance -->
        <Style x:Key="BubbleStyle" TargetType="Border">
            <Setter Property="Width" Value="70"/>
            <Setter Property="Height" Value="70"/>
            <Setter Property="CornerRadius" Value="35"/>
            <Setter Property="Margin" Value="0,15,0,0"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="Background" Value="#FF4C7DFF"/>
            <Setter Property="Opacity" Value="0.83"/>
            <Setter Property="AllowDrop" Value="True"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="0" BlurRadius="20" Opacity="0.6"/>
                </Setter.Value>
            </Setter>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid x:Name="Root" Background="Transparent"
          MouseLeftButtonDown="Root_MouseLeftButtonDown"
          VerticalAlignment="Center" HorizontalAlignment="Center" Height="Auto">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Dynamic bubbles container -->
        <WrapPanel x:Name="BubblesPanel" HorizontalAlignment="Center" VerticalAlignment="Center"
                   Orientation="Horizontal" Grid.Row="0" Margin="10"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Width="Auto" Grid.Row="1">
            <Button Content="Reload" Click="Reload_Click" Padding="1,1" Margin="1"/>
            <Button Content="Add Files" Click="AddFiles_Click" Padding="1,1" Margin="1"/>
            <Button Content="Open Folder" Click="OpenFolder_Click" Padding="1,1" Margin="1"/>
            <Button x:Name="AddBubbleButton" Content="Add Bubble" Click="AddBubble_Click"
                    Padding="1,1" Margin="1"/>
        </StackPanel>
    </Grid>
</Window>