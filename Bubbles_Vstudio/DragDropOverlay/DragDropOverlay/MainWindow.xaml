<Window x:Class="DragDropOverlay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DragDrop Overlay" SizeToContent="WidthAndHeight"
        WindowStyle="None" AllowsTransparency="True" Background="LightYellow"
        Topmost="True" ResizeMode="NoResize" ShowInTaskbar="True"
        AllowDrop="True" Drop="Window_Drop" DragOver="Window_DragOver">
    <Window.Resources>
        <Storyboard x:Key="PulseStoryboard" RepeatBehavior="Forever" AutoReverse="True">
            <DoubleAnimation Storyboard.TargetName="BubbleScale" Storyboard.TargetProperty="ScaleX"
                             From="1.0" To="1.1" Duration="0:0:1.2"/>
            <DoubleAnimation Storyboard.TargetName="BubbleScale" Storyboard.TargetProperty="ScaleY"
                             From="1.0" To="1.1" Duration="0:0:1.2"/>
        </Storyboard>

        <!-- Bubble Style -->
        <Style x:Key="BubbleStyle" TargetType="Border">
            <Setter Property="Width" Value="70"/>
            <Setter Property="Height" Value="70"/>
            <Setter Property="CornerRadius" Value="35"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Background" Value="#FF4C7DFF"/>
            <Setter Property="Opacity" Value="0.83"/>
            <Setter Property="ToolTip" Value="Loading.."/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="0" BlurRadius="20" Opacity="0.6"/>
                </Setter.Value>
            </Setter>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform x:Name="BubbleScale" ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="BubbleBorderStyle" TargetType="Border">
            <Setter Property="Width" Value="70"/>
            <Setter Property="Height" Value="70"/>
            <Setter Property="CornerRadius" Value="35"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Background" Value="#FF4C7DFF"/>
            <Setter Property="Opacity" Value="0.83"/>
            <Setter Property="ToolTip" Value="Loading.."/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="0" BlurRadius="20" Opacity="0.6"/>
                </Setter.Value>
            </Setter>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform x:Name="BubbleScale" ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid x:Name="Root" Background="Transparent"  
          MouseLeftButtonDown="Root_MouseLeftButtonDown" VerticalAlignment="Center" HorizontalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <WrapPanel x:Name="BubblesPanel" HorizontalAlignment="Center" VerticalAlignment="Center" 
                   Orientation="Horizontal" Grid.Row="0" Margin="10">
            <!-- Bubbles will be added dynamically here -->
        </WrapPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="1" Margin="5">
            <Button Content="Reload" Click="Reload_Click" Padding="5,2" Margin="2"/>
            <Button Content="Add Files" Click="AddFiles_Click" Padding="5,2" Margin="2"/>
            <Button Content="Open Folder" Click="OpenFolder_Click" Padding="5,2" Margin="2"/>
            <Button x:Name="AddBubbleButton" Content="Add Bubble" Click="AddBubble_Click"
                    Padding="5,2" Margin="2" IsEnabled="True"/>
        </StackPanel>
    </Grid>
</Window>