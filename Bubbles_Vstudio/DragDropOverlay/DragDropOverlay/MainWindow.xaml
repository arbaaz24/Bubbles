<Window x:Class="DragDropOverlay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DragDrop Overlay" SizeToContent="WidthAndHeight"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        Topmost="True" ResizeMode="NoResize" ShowInTaskbar="True"
        AllowDrop="True" Drop="Window_Drop" DragOver="Window_DragOver">
    <Window.Resources>
        <Storyboard x:Key="PulseStoryboard" RepeatBehavior="Forever" AutoReverse="True">
            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)"
                             From="1.0" To="1.1" Duration="0:0:1.2"/>
            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)"
                             From="1.0" To="1.1" Duration="0:0:1.2"/>
        </Storyboard>

        <!-- Bubble style matching original appearance -->
        <Style x:Key="BubbleStyle" TargetType="Border">
            <Setter Property="Width" Value="70"/>
            <Setter Property="Height" Value="70"/>
            <Setter Property="CornerRadius" Value="35"/>
            <Setter Property="Margin" Value="0,15,0,0"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="Background" Value="#FF4C7DFF"/>
            <Setter Property="Opacity" Value="0.83"/>
            <Setter Property="AllowDrop" Value="True"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="0" BlurRadius="20" Opacity="0.6"/>
                </Setter.Value>
            </Setter>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Add Bubble button style -->
        <Style x:Key="AddBubbleStyle" TargetType="Button">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder"
                                Width="40" Height="40"
                                CornerRadius="20"
                                Background="#8080"
                                BorderThickness="0"
                                Cursor="Hand">
                            <TextBlock Text="+"
                                     FontSize="40"
                                     FontWeight="Bold"
                                     Foreground="White"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Top" Margin="0,-13,0,0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#A0808080"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#C0808080"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#40808080"/>
                                <Setter TargetName="ButtonBorder" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid x:Name="Root" Background="Transparent"
          MouseLeftButtonDown="Root_MouseLeftButtonDown"
          VerticalAlignment="Center" HorizontalAlignment="Center" Height="Auto">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header at top -->
        <Border Background="Black" Grid.Row="0" Height="30">
            <TextBlock Text="Bubbles" 
                       FontSize="24" FontWeight="Bold"
                       HorizontalAlignment="Center" VerticalAlignment="Center" 
                       Foreground="white"/>
        </Border>
        
        <!-- Dynamic bubbles container in middle -->
        <WrapPanel x:Name="BubblesPanel" HorizontalAlignment="Center" VerticalAlignment="Center"
                   Orientation="Vertical" Grid.Row="1" Margin="10"/>

        <!-- Add Bubble button at bottom -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="2" Margin="0,10,0,10">
            <Button x:Name="AddBubbleButton" Click="AddBubble_Click"
                    Style="{StaticResource AddBubbleStyle}" 
                    Margin="5" ToolTip="Make bubble"/>
        </StackPanel>
        
        <!--Un-comment below code to see debugging code-->
        <!--StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Width="Auto" Grid.Row="2">
            <Button Content="Reload" Click="Reload_Click" Padding="1,1" Margin="1" Grid.Row="2"/>
            <Button Content="Kill" Click="Kill_Click" Padding="1,1" Margin="20,0,0,0" Grid.Row="2"/>
        </StackPanel-->
    </Grid>
</Window>