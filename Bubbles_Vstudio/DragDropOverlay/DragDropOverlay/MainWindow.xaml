 
<!-- File: MainWindow.xaml
// Transparent, always-on-top overlay window with an animated draggable badge.
// Left-drag on the badge starts a real OS drag of files from the temp folder.
// Left-drag on empty space moves the window.
// <?xml version="1.0" encoding="utf-8"?> !-->
<Window x:Class="DragDropOverlay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DragDrop Overlay" Width="240" Height="240"
        WindowStyle="None" AllowsTransparency="True" Background="#01000000"
        Topmost="True" ResizeMode="NoResize" ShowInTaskbar="True">
    <Window.Resources>
        <!-- Pulse animation for the badge -->
        <Storyboard x:Key="PulseStoryboard" RepeatBehavior="Forever" AutoReverse="True">
            <DoubleAnimation Storyboard.TargetName="BadgeScale" Storyboard.TargetProperty="ScaleX"
                             From="1.0" To="1.1" Duration="0:0:1.2"/>
            <DoubleAnimation Storyboard.TargetName="BadgeScale" Storyboard.TargetProperty="ScaleY"
                             From="1.0" To="1.1" Duration="0:0:1.2"/>
        </Storyboard>
    </Window.Resources>

    <Grid x:Name="Root" Background="Transparent"
          MouseLeftButtonDown="Root_MouseLeftButtonDown">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Centered badge -->
        <Border x:Name="Badge" Width="140" Height="140" CornerRadius="70"
                HorizontalAlignment="Center" VerticalAlignment="Center"
                Background="#FF4C7DFF" Opacity="0.93"
                MouseLeftButtonDown="Badge_MouseLeftButtonDown"
                MouseMove="Badge_MouseMove"
                MouseLeftButtonUp="Badge_MouseLeftButtonUp">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="0" BlurRadius="20" Opacity="0.6"/>
            </Border.Effect>
            <Border.RenderTransform>
                <ScaleTransform x:Name="BadgeScale" ScaleX="1" ScaleY="1"/>
            </Border.RenderTransform>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Drag Files" FontSize="22" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                <TextBlock x:Name="CountText" Text="0 items" FontSize="14" Foreground="#F0F0F0" HorizontalAlignment="Center"/>
                <TextBlock Text="(from %TEMP%)" FontSize="12" Foreground="#DDE" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Bottom bar: small buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,8,0,8">
            <Button Content="Reload" Click="Reload_Click" Padding="10,4" Margin="4"/>
            <Button Content="Open Folder" Click="OpenFolder_Click" Padding="10,4" Margin="4"/>
            <Button Content="Exit" Click="Exit_Click" Padding="10,4" Margin="4"/>
        </StackPanel>
    </Grid>
</Window>
